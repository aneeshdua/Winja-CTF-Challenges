    <style>
        body{
            background:#e7f2f3;
            margin-left: 10pt;
        }
        th { 
        padding: 10px;
        }
        td { 
        padding: 10px;
        }
        #header{
                width:100%;
                height:90px;
                z-index:2500;
                padding-left:120px;
                position:fixed;
                top:0;
                left:0;
                background:rgba(0, 0, 0, 0.8);
                color: #e7f2f3;
            }
        #logo{
            position:absolute;
            height:70px;
            left:25px;
            top:10px;
            cursor:pointer;
        }
        .row, #header{
                min-width: 440px;
            }

        .header-phones{
            font-size:14px;
            color: #e7f2f3;
            margin-right: 13.5%;
        }
        .header-item{
            margin-right:13.5%;
            color:#e7f2f3;
            font-size:18px;
            background: Transparent no-repeat;
            border: none;
            cursor:pointer;
            overflow: hidden;
            outline:none;
            border-radius:6px;
        }
        .header-item:hover{
            transition: background-color 0.3s;
            background-color:rgba(200, 200, 200, 0.2);
        }
        .bounty_header{
            margin-top: 80pt;
            text-align: center;
            font-size: 40pt;
            font-family: Arial, Helvetica, sans-serif;
            font-style:oblique;
            font-weight: bold;
        }
        .policy{
            font-size: 30pt;
            font-family: Arial, Helvetica, sans-serif;
            font-weight: bold;
            
        }
        .problem{
            font-family: 'Courier New', Courier, monospace;
            font-size: 20pt;
        }
        .challenge{
            width: 150px;
            height:50px;
            border-radius:3000px;
            position:relative;
            left:calc(50% - 75px);
            top:calc(50% - 25px);
            background: black;
            cursor:pointer;
            line-height:12px;
            opacity:1;
            color: white;
            font-weight: bolder;  
            font-family: Lato, "Trebuchet MS", "Verdana", "sans-serif";
        }
    </style>
